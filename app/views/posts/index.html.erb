<h1>Posts</h1>

<table class="table table-striped table-hover">
	<thread>
		<tr>
			<th>
				#
			</th>
			<th>
				Date
			</th>
			<th>
				User
			</th>
			<th>
				Rationale
			</th>
		</tr>
	</thread>
	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td>
					<%=  post.id %>
				</td>
				<td>
					<%= post.date %>
				</td>
				<td>
					<%= post.user.last_name %>
				</td>
				<td>
					<%= truncate(post.rationale) %>
				</td>
			</tr>
		<% end %>	
	</tbody>
</table>		
